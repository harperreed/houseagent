# HouseAgent Configuration
# Complete configuration for office-aware monitoring system

# =============================================================================
# MQTT Broker
# =============================================================================
MQTT_BROKER_ADDRESS=127.0.0.1
MQTT_PORT=1883

# Keepalive interval in seconds (lower = faster disconnect detection, higher = less network traffic)
MQTT_KEEP_ALIVE_INTERVAL=30

# Client IDs (must be unique per connection - change if running multiple instances)
MQTT_COLLECTOR_CLIENT_ID=housebot-collector
MQTT_AGENT_CLIENT_ID=housebot-agent

# Authentication (leave blank if broker doesn't require auth)
MQTT_USERNAME=
MQTT_PASSWORD=

# MQTT Topics
SUBSCRIBE_TOPIC=hassevents/notifications
MESSAGE_BUNDLE_TOPIC=houseevents/ai/bundle/publish
NOTIFICATION_TOPIC=houseevents/ai/publish

# =============================================================================
# AI Models (GPT-5)
# =============================================================================
OPENAI_API_KEY=sk----your-openai-api-key-here----

# CLASSIFIER_MODEL: Fast model for routine events (gpt-5-mini, gpt-5-nano)
CLASSIFIER_MODEL=gpt-5-mini

# SYNTHESIS_MODEL: Premium model for high-severity situations (gpt-5, gpt-5-pro, gpt-5-codex)
SYNTHESIS_MODEL=gpt-5

# OPENAI_MODEL: Default model (legacy compatibility)
OPENAI_MODEL=gpt-5

# Temperature for AI responses (0.0 = deterministic, 1.0 = creative)
OPENAI_TEMPERATURE=0

# =============================================================================
# Office Mode Features
# =============================================================================
# Enable office sensor processing (hierarchical topics: office/{site}/{floor}/{zone}/{type}/{id})
OFFICE_MODE=true

# Enable tool execution (floor plan queries, camera snapshots, etc.)
ENABLE_TOOLS=true

# =============================================================================
# Floor Plan & Spatial Reasoning
# =============================================================================
FLOOR_PLAN_PATH=config/floor_plan.json

# Zone mapping for legacy home automation format (JSON)
ZONE_MAP={"hallway": "zone_hall", "living_room": "zone_living"}

# =============================================================================
# Filtering & Anomaly Detection
# =============================================================================
# Z-score threshold for anomaly detection (typical: 2.5-3.0)
ANOMALY_Z_THRESHOLD=2.5

# Time window for situation clustering (seconds)
SITUATION_MERGE_WINDOW=7

# =============================================================================
# Tool Configuration
# =============================================================================
# Rate limiting for tool calls
TOOL_BUDGET_PER_MINUTE=10

# =============================================================================
# Camera Integration (Optional)
# =============================================================================
# RTSP base URL for camera snapshots
# CAMERA_RTSP_BASE=rtsp://camera.local

# =============================================================================
# Semantic Memory (Optional)
# =============================================================================
# ChromaDB persistence directory for long-term memory
# CHROMA_PERSIST_DIR=data/chroma

# =============================================================================
# Message Processing
# =============================================================================
TIMEOUT=60
RETRY_INTERVAL=5
MAX_RETRIES=10
MAX_QUEUE_SIZE=1000

# =============================================================================
# Logging
# =============================================================================
AGENT_LOGFILE=house_agent.log
COLLECTOR_LOGFILE=house_collector.log
